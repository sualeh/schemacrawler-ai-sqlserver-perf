{
  "servers": {
    "local_sse": {
      "type": "sse",
      "url": "http://localhost:8000/sse/"
    },
    "local_stdio": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "schemacrawler/schemacrawler-ai-sqlserver-perf"
      ],
      "type": "stdio"
    },
    "MCP_DOCKER": {
      "command": "docker",
      "args": [
        "mcp",
        "gateway",
        "run",
        "--long-lived"
      ],
      "type": "stdio"
    }
  }
}
